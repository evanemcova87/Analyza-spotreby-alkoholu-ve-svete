CREATE OR REPLACE TABLE l2_final_table_3 AS

SELECT COA.COUNTRY_CODE
     , COA.COUNTRY_NAME
     , COA.YEAR
     , COA.SEX
     , COA.REGION
     , COA.SUB_REGION
     , COA.CONSUMPTION
     , R.RELIGION_NAME
     , R.RELIGION_PERCENTAGE
     , AL.AGE_LIMIT
     , ADS.ALCOHOL_DEATHS

FROM L1_CONSUMPTION_OF_ALCOHOL COA

JOIN L1_RELIGION R
ON COA.COUNTRY_CODE = R.COUNTRY_CODE

JOIN L1_AGE_LIMIT AL
ON COA.COUNTRY_CODE = AL.COUNTRY_CODE

JOIN L1_ALCOHOL_DEATHS_SEXES ADS
ON COA.COUNTRY_CODE = ADS.COUNTRY_CODE AND COA.SEX = ADS.SEX 

WHERE COA.YEAR = 2016 AND COA.SEX = 'Both sexes';
